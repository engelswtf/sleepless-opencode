{
  "name": "sleepless-opencode",
  "version": "1.0.0",
  "description": "24/7 AI agent daemon for OpenCode - works while you sleep",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sleepless": "./dist/cli.js",
    "sleepless-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp-server.js",
    "cli": "tsx src/cli.ts",
    "setup": "tsx src/setup.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "opencode",
    "ai",
    "agent",
    "autonomous",
    "daemon",
    "discord",
    "slack"
  ],
  "author": "engels",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@opencode-ai/sdk": "^1.1.13",
    "@slack/bolt": "^4.1.0",
    "better-sqlite3": "^11.7.0",
    "commander": "^12.1.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.19.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  }
}
