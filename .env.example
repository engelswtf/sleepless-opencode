# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_NOTIFICATION_USER_ID=your_discord_user_id
# Optional: Channel for notifications (if not set, uses DM)
# DISCORD_NOTIFICATION_CHANNEL_ID=channel_id

# Slack Bot (Optional)
# SLACK_BOT_TOKEN=xoxb-your-token
# SLACK_APP_TOKEN=xapp-your-token
# SLACK_NOTIFICATION_CHANNEL=channel_name

# OpenCode
OPENCODE_WORKSPACE=/path/to/workspace
# Optional: specific port for opencode server
# OPENCODE_PORT=4096

# Daemon settings
POLL_INTERVAL_MS=5000
MAX_CONCURRENT_TASKS=1
